%h2 ADD COMMENT
%hr
%br
%p
  %p USER ID: #{@user_id}
  %p PHOTO ID: #{@photo_id}
  %br/
  %hr/
  %br/
  %p OLD COMMENTS
  %br/
  %hr/
  %br/
- @currentComments.each do |c|
  %p
    %span.badge.badge-secondary
      user id: #{c.user_id}
    = c.context
= form_for :comment, url: user_photo_comments_path do |f|
  %p
    = f.label "Comment Context".to_sym
  %p
    = f.text_area :context
  %p
    = f.submit
= button_tag "Cancel", :type => 'button', :id => 'closeButton'